{
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "hostRequirements": {
    "cpus": 2
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && export PATH=\"$HOME/.local/bin:$HOME/.cargo/bin:$PATH\" && uv venv && uv pip install marimo && uv pip install -r requirements.txt",
  "postCreateCommand": "",
  "postStartCommand": "export PATH=\"$HOME/.local/bin:$HOME/.cargo/bin:$PATH\" && source .venv/bin/activate",
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python",
        "marimo-team.vscode-marimo"
      ]
    }
  }
}